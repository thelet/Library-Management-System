@startuml
start

:User clicks "Search Book" in LibraryGUI;
:LibraryGUI displays Search Options;

partition FrontEnd {
    :User enters search criteria;
    :User selects search strategy;
    :User submits the search query;
}

partition BackEnd {
    :LibraryGUI validates input;
    if (Input Valid?) then (yes)
        :LibraryGUI calls Library.searchBooks(criteria, strategy);
        :Library performs search using strategy;
        :Library returns search results;
        :LibraryGUI displays search results;
    else (no)
        :LibraryGUI shows error message;
    endif
}

stop
@enduml
