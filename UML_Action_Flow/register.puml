@startuml
start

:User clicks "Register" in LibraryGUI;
:LibraryGUI displays Registration Form;

partition FrontEnd {
    :User enters registration details;
    :User submits the form;
}

partition BackEnd {
    :LibraryGUI validates input;
    if (Input Valid?) then (yes)
        :LibraryGUI calls Library.registerUser(userDetails);
        :Library registers new user;
        :Logger logs "New user registered";
        :LibraryGUI shows success message;
    else (no)
        :LibraryGUI shows error message;
    endif
}

stop
@enduml
