@startuml
start

:User clicks "Add Book" in LibraryGUI;
:LibraryGUI displays Add Book Form;

partition FrontEnd {
    :User fills in book details;
    :User submits the form;
}

partition BackEnd {
    :LibraryGUI validates input;
    if (Input Valid?) then (yes)
        :LibraryGUI calls Library.addBook(book);
        :Library adds book to collection;
        :Library notifies observers;
        :Logger logs "Book added";
        :LibraryGUI shows success message;
    else (no)
        :LibraryGUI shows error message;
    endif
}

stop
@enduml
